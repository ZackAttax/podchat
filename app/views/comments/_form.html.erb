<div id= "comment-form" class="mt-6 flex gap-x-3">
  <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="" class="h-6 w-6 flex-none rounded-full bg-gray-50">
  <%= form_with model: comment, id: "new_comment_form", url: comments_create_path, method: :post, data: {turbo_frame: "episode"}, class: "relative flex-auto" do |form| %>
    <div class="overflow-hidden rounded-lg pb-12 shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600">
      <%= form.label :comment, "Add your comment", class: "block ml-5 text-sm font-medium leading-6 text-gray-900" %>
      <%= form.hidden_field :episode, value: episode %>
      <%= form.hidden_field :timestamp, value: 0, 'data-spotify-target': 'timeStamp' %>
      <%= form.text_area :content, rows: 4, class: "block w-full resize-none border-0 bg-transparent py-1.5 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6", placeholder:"Add your comment..." %>
    </div>
    <%= form.submit 'Post', class: "px-4 py-3 ml-3 font-medium bg-gray-300 text-neutal-900 rounded flex items-center cursor-pointer hover:bg-gray-400 focus:ring-4 ring-0 focus:ring-gray-100" %>
  <% end %>
</div>