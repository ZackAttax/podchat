<li class="flex items-center justify-between gap-x-6 py-5">
  <div class="flex min-w-0 gap-x-4">
    <img class="h-12 w-12 flex-none rounded-full bg-gray-50" src="<%= @podcast.images.last["url"] %>" alt="">
    <div class="min-w-0 flex-auto">
      <p class="text-sm font-semibold leading-6 text-gray-900"><%= @podcast.name %></p>
      <p class="mt-1 w-1/2 truncate whitespace-normal overflow-auto line-clamp-3 text-xs leading-5 text-gray-500">
        <%= @podcast.description %>
      </p>
        <% if  @podcast.external_urls["spotify"] %>
          <%= link_to " See this Podcast on Spotify", @podcast.external_urls["spotify"], target: "_blank", class: "text-xs text-green-500 hover:underline" %>
        <% end %>
    </div>
  </div>
  <%= link_to 'View', {controller: "podcasts", action: "show", id: @podcast.id}, class: "rounded-full bg-white px-2.5 py-1 text-xs font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
</li>
